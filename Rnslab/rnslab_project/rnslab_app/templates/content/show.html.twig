{% block title %}Contents{% endblock %}

{% block body %}
    <h1>Contents</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ content.id }}</td>
            </tr>
            <tr>
                <th>OrderContent</th>
                <td>{{ content.orderContent }}</td>
            </tr>
            <tr>
                <th>Hook</th>
                <td>{{ content.hook }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ content.title }}</td>
            </tr>
            <tr>
                <th>Subtitle</th>
                <td>{{ content.subtitle }}</td>
            </tr>
            <tr>
                <th>TextContent</th>
                <td>{{ content.textContent }}</td>
            </tr>
            <tr>
                <th>MediaSrc</th>
