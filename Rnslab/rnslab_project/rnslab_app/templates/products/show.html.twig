{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    <h1>Products</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Hightlighted</th>
                <td>{{ product.hightlighted ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Orderproduct</th>
                <td>{{ product.orderproduct }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>PictureSrc</th>
                <td>{{ product.pictureSrc }}</td>
            </tr>
            <tr>
                <th>PictureAlt</th>
                <td>{{ product.pictureAlt }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_products_index') }}">back to list</a>

    <a href="{{ path('app_products_edit', {'id': product.id}) }}">edit</a>

    {{ include('products/_delete_form.html.twig') }}
{% endblock %}
